<UserControl x:Class="TheNoteTaker_WPF_UI.MVVM.Views.NoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheNoteTaker_WPF_UI.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0"
                      x:Name="NoteList"/>
            <TextBox Grid.Row="1"
                     x:Name="NoteTextBox"
                     Style="{StaticResource NoteView.Textbox.Theme}"
                     KeyDown="{Binding TextBox_KeyDown}"
                     />
        </Grid>

    </Border>
</UserControl>
