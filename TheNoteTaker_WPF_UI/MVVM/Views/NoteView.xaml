<UserControl x:Class="TheNoteTaker_WPF_UI.MVVM.Views.NoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheNoteTaker_WPF_UI.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0"
                      ItemsSource="{Binding ListOfNotes}"/>



            <!--<Border Grid.Row="1"
                    Style="{StaticResource NoteViewTheme.TextBoxBorder}">
                <TextBox x:Name="NoteText"
                         Style="{StaticResource NoteTextBox}"/>
            </Border>-->
            <TextBox Grid.Row="1"
                     x:Name="NoteText"
                     Template="{StaticResource TextBox}"/>



            <Button Grid.Row="2"
                    Content="Post"
                    x:Name="PostNote"/>
        </Grid>

    </Border>
</UserControl>
